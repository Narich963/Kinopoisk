@page
@model Kinopoisk.MVC.Pages.Films.IndexModel
@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdn.datatables.net/2.3.0/css/dataTables.dataTables.css" />

<table id="filmsTable" class="display">
    <thead>
        <tr class="text-primary text-center">
            <th>ID</th>
            <th>Poster</th>
            <th>Name</th>
            <th>Description</th>
            <th>Publish Date</th>
            <th>Country</th>
            <th>Duration</th>
            <th>IMDB Rating</th>
            <th>User Rating</th>
            <th>Director</th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#filmsTable').DataTable({
                ajax:{
                    url: '/Films/Index?handler=GetFilms',
                    dataSrc: ''
                },
                columns: [
                    { data: 'id' },
                    { data: 'poster', render: function(data) { return '<img src="' + data + '" alt="Poster" style="width:100px;height:auto;">'; } },
                    { data: 'name' },
                    { data: 'description' },
                    {
                        data: 'publishDate',
                        render: function(data) {
                            return new Date(data).toLocaleDateString();
                        }
                    },
                    {
                        data: 'countryFlagLink',
                        render: function(data) {
                            return `<img src="${data}" style="margin-right:5px;">`;
                        }
                    },
                    { data: 'duration' },
                    { data: 'imdbRating'},
                    { data: 'usersRating' },
                    { data: 'directorName' }
                ],
                createdRow: function (row, data) {
                    $(row).css('cursor', 'pointer');
                    $(row).on('click', function () {
                        window.location.href = '/Films/Details?id=' + data.id;
                    });
                }
            });
        });

    </script>
}