@page
@model Kinopoisk.MVC.Pages.Accounts.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 fw-bold">Login</h2>
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="LoginViewModel.Login" class="form-label"></label>
                            <input asp-for="LoginViewModel.Login" class="form-control rounded-3" />
                            <span asp-validation-for="LoginViewModel.Login" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LoginViewModel.Password" class="form-label"></label>
                            <input asp-for="LoginViewModel.Password" class="form-control rounded-3" />
                            <span asp-validation-for="LoginViewModel.Password" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-3 fw-semibold">Login</button>

                        <div class="mt-3 text-center">
                            <a asp-page="Register" class="btn btn-link">Don't have an account? Register</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>