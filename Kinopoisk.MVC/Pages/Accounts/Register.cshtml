@page
@model Kinopoisk.MVC.Pages.Accounts.RegisterModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 fw-bold">Login</h2>
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="RegisterViewModel.Username" class="form-label"></label>
                            <input asp-for="RegisterViewModel.Username" class="form-control rounded-3" />
                            <span asp-validation-for="RegisterViewModel.Username" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RegisterViewModel.Password" class="form-label"></label>
                            <input asp-for="RegisterViewModel.Password" class="form-control rounded-3" />
                            <span asp-validation-for="RegisterViewModel.Password" class="text-danger small"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="RegisterViewModel.ConfirmPassword" class="form-label"></label>
                            <input asp-for="RegisterViewModel.ConfirmPassword" class="form-control rounded-3" />
                            <span asp-validation-for="RegisterViewModel.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-3 fw-semibold">Login</button>

                        <div class="mt-3 text-center">
                            <a asp-page="Login" class="btn btn-link">Already have an account? Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>